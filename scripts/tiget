#!/usr/bin/env python
import sys

from tiget.repl import Repl
from tiget.cmds import run, CmdError


def main():
    args = sys.argv[1:]
    if not args or args[0] == 'shell':
        Repl().run()
        return
    try:
        run(args)
    except CmdError as e:
        print e


if __name__ == '__main__':
    main()
